@model Gepa.Site.Models.Account.TeacherEditModel

@{
    ViewBag.Title = Language.TeacherSettings;
}

<div class="container">
    <h1 class="gepaTitles">@ViewBag.Title</h1>

    @using (Html.BeginForm("SaveTeacherSettings", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.HiddenFor(m => m.TeacherId)
        @Html.HiddenFor(m => m.UserId)

        @Html.AntiForgeryToken()
        <div class="gepaLoginDivs displayInlineGrid">
            @Html.ValidationSummary("", new { @class = "loginComponents loginLabels text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "loginComponents loginLabels text-left" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CultureLanguage, new { @class = "loginComponents loginLabels text-left" })
                @Html.EnumDropDownListFor(m => m.CultureLanguage, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CultureLanguage, "", new { @class = "text-danger" })
            </div>

            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "loginComponents loginLabels text-left" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn gepaFormButtons">@Language.Save</button>
            </div>
        </div>
    }
</div>
