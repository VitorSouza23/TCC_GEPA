@model Gepa.Site.Models.ClassPlans.LessonsContentModel

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Language.AddContent</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    @Html.HiddenFor(m => m.Id)

                    @Html.LabelFor(m => m.ContentValue)
                    @Html.TextBoxFor(m => m.ContentValue, new { @class = "form-control" })
                </div>
            </div>

            <div class="modal-footer">
                <button id="CancelLessonContentBtn" type="button" class="btn btn-secondary" data-dismiss="modal">@Language.Cancel</button>
                <button id="AddLessonContentBtn" type="button" class="btn btn-primary">@Language.Save</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#AddLessonContentBtn").click(function (e) {
        });
    });
</script>