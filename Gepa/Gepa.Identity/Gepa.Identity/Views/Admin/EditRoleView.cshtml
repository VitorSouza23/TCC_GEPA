@model Gepa.Identity.Models.RoleModel
@{
    ViewBag.Title = "Papél";
}

<h2>@ViewBag.Title</h2>

<div class="content">
    <div class="jumbotron">
        @using (@Html.BeginForm("SaveRoleInformation", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "editRoleForm" }))
        {
            @Html.HiddenFor(m => m.RoleId);
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(u => u.RoleId, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DisplayFor(u => u.RoleId, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RoleName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar Alterações" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

